<Window x:Class="student_management.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:student_management"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Student Management" Width="600" Height="250">
    <Grid>
        <Grid VerticalAlignment="Center" HorizontalAlignment="Center" >
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>
            <Label HorizontalAlignment="Center" Grid.Row="0" FontSize="24">THANKS FOR USING THIS PROGRAM</Label>
            <Label HorizontalAlignment="Center" Grid.Row="1" FontSize="24">HOPE YOU LIKE IT!</Label>
        </Grid>
    </Grid>
</Window>
